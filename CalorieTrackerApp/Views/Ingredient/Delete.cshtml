@model CalorieTrackerCookBookApp.ViewModels.IngredientViewModel

@{
    ViewData["Title"] = "Delete Ingredient";
}

<h2>Delete Ingredient</h2>

<p>Are you sure you want to delete this ingredient?</p>

<div class="form-group">
    <label>Name:</label>
    <span>@Model.Name</span>
</div>

<div class="form-group">
    <label>Calories:</label>
    <span>@Model.Calories</span>
</div>

<div class="form-group">
    <label>Macronutrients:</label>
    <span>@Model.Macronutrients</span>
</div>

<div class="form-group">
    <label>Quantity:</label>
    <span>@Model.Quantity</span>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-recipeId="@Model.RecipeId" class="btn btn-secondary">Cancel</a>
</form>
